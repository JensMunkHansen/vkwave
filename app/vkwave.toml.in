title = "vkwave"

[vulkan]
preferred_gpu = "NVIDIA"    # partial name match, "" for auto-select
present_mode = "fifo"       # "immediate", "mailbox", "fifo", "fifo_relaxed"
swapchain_images = 10       # 0 = driver default (minImageCount + 1)

[scene]
model_path = "@CMAKE_SOURCE_DIR@/data/DamagedHelmet/glTF-Binary/DamagedHelmet.glb"
model_paths = [
    "@CMAKE_SOURCE_DIR@/data/DamagedHelmet/glTF-Binary/DamagedHelmet.glb",
    "@CMAKE_SOURCE_DIR@/data/AlphaBlendModeTest/glTF-Binary/AlphaBlendModeTest.glb",
    "@CMAKE_SOURCE_DIR@/data/CompareMetallic/glTF-Binary/CompareMetallic.glb",
    "@CMAKE_SOURCE_DIR@/data/ScatteringSkull/glTF-Binary/ScatteringSkull.glb",
    "@CMAKE_SOURCE_DIR@/localdata/LowerJawScan/LowerJawScan.gltf",
]
hdr_path = "@CMAKE_SOURCE_DIR@/data/footprint_court.hdr"
hdr_paths = [
    "@CMAKE_SOURCE_DIR@/data/footprint_court.hdr",
    "@CMAKE_SOURCE_DIR@/data/neutral.hdr",
    "@CMAKE_SOURCE_DIR@/data/hospital_room.hdr",
    "@CMAKE_SOURCE_DIR@/data/hospital_room_2.hdr",
    "@CMAKE_SOURCE_DIR@/data/surgery.hdr",
    "@CMAKE_SOURCE_DIR@/data/childrens_hospital.hdr",
]

[window]
title = "vkwave"
width = 800
height = 600
mode = "windowed"           # "windowed", "windowed_fullscreen", "fullscreen"

[platform]
use_x11 = false             # force X11 instead of Wayland

[debug]
max_frames = @VKWAVE_MAX_FRAMES@  # 0 = unlimited, >0 = exit after N frames (coverage builds)
shader_debug = true     # emit NonSemantic debug info (real variable names in RenderDoc/Nsight)
shader_optimize = false # disable SPIR-V optimizer for debuggability
